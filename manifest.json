{
  "manifest_version": 3,
  "name": "Adaptive Volume Ultimate",
  "version": "1.5.0",
  "description": "Solution audio intelligente pour des conf√©rences web parfaitement claires.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "alarms",
    "audioCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "public/icons/icon-main.svg",
      "48": "public/icons/icon-main.svg",
      "128": "public/icons/icon-main.svg"
    }
  },
  "icons": {
    "16": "public/icons/icon-main.svg",
    "48": "public/icons/icon-main.svg",
    "128": "public/icons/icon-main.svg"
  }
}
